# LangSmith tracing
LANGSMITH_API_KEY=lsm_your_langsmith_key
LANGCHAIN_TRACING_V2=true
LANGSMITH_PROJECT=hcc-pipeline

# Vertex AI / GCP
GOOGLE_CLOUD_PROJECT=gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service_account.json

# Optional Vertex overrides (keep in sync with the GOOGLE_* values)
VERTEX_PROJECT_ID=gcp-project-id
VERTEX_LOCATION=us-central1
VERTEX_MODEL_NAME=gemini-2.5-flash
VERTEX_TEMPERATURE=0.0
VERTEX_MAX_OUTPUT_TOKENS=1024

# Pipeline settings
USE_LLM=true
PROGRESS_NOTES_DIR=progress_notes
HCC_CODES_CSV=HCC_relevant_codes.csv
OUTPUT_DIR=output
PIPELINE_MAX_WORKERS=1

# HCC matching behavior
HCC_ENABLE_FUZZY_MATCH=true
HCC_FUZZY_MATCH_THRESHOLD=0.92

# LLM output controls (optional)
LLM_ENABLE_REPAIR=true
LLM_REPAIR_MAX_CHARS=6000
LLM_LOG_VERBOSE=false
LLM_USE_RESPONSE_SCHEMA=true
SUPPRESS_VERTEXAI_WARNINGS=true
